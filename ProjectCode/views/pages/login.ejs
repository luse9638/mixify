<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<style>
  h1 {
    color: #1DB954;
    text-align: center;
    margin: 3%;
    font-size: 65px;
  }

  #InputUsername, #InputPassword {
    width: 20%;
  }

  .container {
    text-align: center;
  }

</style>

<main>
  <div class="col"><%- include ('../partials/message') %></div>
  <div class="container">
      <h1>Login</h1>
      <form action="/login" method="POST">
        <div class="form-group">
            <label for="InputUsername">Username</label>
            <center><input name="username" type="text" class="form-control" id="InputUsername" placeholder="Username"></center>
        </div>
        <div class= "form-group">
            <label for="InputPassword">Password</label>
            <center><input name="password" type="password" class="form-control" id="InputPassword" placeholder="Password"></center>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <p>Don't have an account? <a href="/register">Register</a></p>
  </div>
</main>

