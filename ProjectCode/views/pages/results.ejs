<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<style>
    main {
        text-align: center;
    }

    h1 {
        margin-top: 56px;
        margin-bottom: 28px;
    }

    #songsContainer {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 16px;
    }

    .song {
        background: rgba(164, 230, 169, 0.846);
        width: 30%;
        height: 150px;
        border-radius: 12px;
    }

    p {
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
    }

</style>

<main>
    <h1>Here's what songs you have in common...</h1>
    <div style ="margin-left: 29%;">
        <% if (songData.length === 0) { %>
            <p>No songs in common :/</p>
        <% } else { %>
            <% songData.forEach(song => { %>
                <div style="background: #1DB954; padding-top: 13px; margin-top: 20px; margin-bottom: 20px; width: 60%; height: 180px; border-radius: 50px;">
                    <p><%= song.songname.toUpperCase(); %> by <%= song.artistname %> from <%= song.albumname %></p>
                    <img src=<%= song.albumarturl %> width="100", height="100">
                </div>
            <% }) %>
        <% } %>
        
    </div>
</main>

<%- include ('../partials/footer') %>