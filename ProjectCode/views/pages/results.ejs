<style>
    main {
        text-align: center;
    }

    h1 {
        margin-top: 56px;
        margin-bottom: 28px;
    }

    #songsContainer {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 16px;
    }

    .song {
        background: rgba(164, 230, 169, 0.846);
        width: 30%;
        height: px;
        border-radius: 12px;
    }

</style>

<main>
    <h1>Here's what songs you have in common</h1>
    
    

    <div id="songsContainer">
        <% if (songData.length === 0) { %>
            No songs in common :/
        <% } else { %>
            <% songData.forEach(song => { %>
                <div class="song">
                    <img src=<%= song.albumarturl %> width="100", height="100", class="songImage", style="margin: 10px 10px 10px 10px">
                    <p class="songName"><%= song.songname %></p>
                    <p>Artist: <%= song.artistname %></p>
                    <p>Off the album: <%= song.albumname %></p>
                </div>
            <% }) %>
        <% } %>
        
        
        
        
        
        
